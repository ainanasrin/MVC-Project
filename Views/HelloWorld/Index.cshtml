    ViewData["Title"] = "Welcome";
}
<h2>Welcome to Our Movie Theater</h2>
<!DOCTYPE html>
<html>
<head>
    <title>Welcome to Our Movie Theater</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
        }

        header {
            background-color: #333;
            color: #fff;
            padding: 20px;
            text-align: center;
        }

        .container {
            max-width: 800px;
            margin: 20px auto;
            padding: 0 20px;
        }

        h1 {
            font-size: 36px;
            margin-bottom: 20px;
        }

        .movie-list {
            list-style: none;
            padding: 0;
        }

            .movie-list li {
                margin-bottom: 10px;
                border: 1px solid #ccc;
                padding: 10px;
                background-color: #fff;
            }

        footer {
            background-color: #333;
            color: #fff;
            text-align: center;
            padding: 10px;
            position: absolute;
            bottom: 0;
            width: 100%;
        }
    </style>
</head>
<body>
    <header>
        <h1>Welcome to Our Movie Theater</h1>
    </header>
    <div class="container">
        <section>
            <h2>Now Showing</h2>
            <ul class="movie-list">
                <li>
                    <h3>Movie Title 1</h3>
                    <p>Description of the movie.</p>
                </li>
                <li>
                    <h3>Movie Title 2</h3>
                    <p>Description of the movie.</p>
                </li>
                <!-- Add more movie listings here -->
            </ul>
        </section>
    </div>
    <footer>
        <p>&copy; 2023 Your Movie Theater</p>
    </footer>
</body>
</html>